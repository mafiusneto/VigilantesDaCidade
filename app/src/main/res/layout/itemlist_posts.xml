<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#fdfdf6"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/ivIt_Post"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIt_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/por"
                android:layout_marginLeft="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvIt_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fulano"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:textColor="#111"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvIt_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:text="DenÃºncia em xx/xx/2017 00:00"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvIt_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Description ads d a dsd asd  a sdasd"
            android:textSize="16sp" />

    </LinearLayout>
    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#cecece" />
</LinearLayout>